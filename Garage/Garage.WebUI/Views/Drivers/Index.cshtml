@model IEnumerable<Garage.WebUI.Models.DriverViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Drivers Info</h2>

<ul class="nav nav-tabs">
    <li class="active">@Html.ActionLink("Drivers info", "Index", "Drivers")</li>
    <li>@Html.ActionLink("Vehicles info", "Index", "Vehicles")</li>
</ul>

<br />

@using (Ajax.BeginForm("Search", FormMethod.Post, new AjaxOptions { UpdateTargetId = "list" }, new { @class = "form-inline", role = "form" }))
{
    <div class="col-md-3 col-md-offset-7">
        <input type="text" name="str" class="form-control" placeholder="search parameters" />
    </div>

    <div>
        <input type="submit" value="Search" class="btn btn-default">
    </div>
}

<br />

<table id="list" class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MedicalCertificate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MedicalCertificate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Add New Driver", "Create", null, new { @class = "btn btn-default" })
</p>