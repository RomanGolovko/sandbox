@model IEnumerable<PresentationLayer.WebUI.Models.BugReportViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Bug Report info</h2>

@using (Ajax.BeginForm("Search", FormMethod.Post, new AjaxOptions { UpdateTargetId = "list" }, 
    new { @class = "form-inline", role = "form" }))
{
    <div class="col-md-3 col-md-offset-7">
        <input type="text" name="str" class="form-control" placeholder="search parameters" />
    </div>
    <div>
        <input type="submit" value="Search" class="btn btn-default">
    </div>
}

<br />

<table id="list" class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Summary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Project)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Component)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssignedTo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FoundIn)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Summary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Project)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Component)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssignedTo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FoundIn)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Create New Bug Report", "Create", null, new { @class = "btn btn-default" })
</p>
